# ===========================================
# ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to git
# ===========================================

# Database (Neon PostgreSQL)
# Get from: https://neon.tech → Your Project → Connection Details
DATABASE_URL="postgres://user:password@ep-xxx-pooler.us-west-2.aws.neon.tech/neondb?sslmode=require"
DATABASE_URL_UNPOOLED="postgres://user:password@ep-xxx.us-west-2.aws.neon.tech/neondb?sslmode=require"

# Authentication (NextAuth.js)
# NEXTAUTH_URL: Your app's URL (http://localhost:3000 for dev)
# NEXTAUTH_SECRET: Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET=""

# Email (Resend)
# Get from: https://resend.com → API Keys
RESEND_API_KEY=""
EMAIL_FROM="noreply@yourdomain.com"

# Email Server (for NextAuth magic links)
EMAIL_SERVER_HOST="smtp.resend.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="resend"
EMAIL_SERVER_PASSWORD=""  # Same as RESEND_API_KEY

# ===========================================
# OPTIONAL - Add as needed
# ===========================================

